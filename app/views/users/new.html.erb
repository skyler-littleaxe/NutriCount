<h1> Sign Up Here: </h1>

<body>

<%= form_with model: @user do |f| %>
    <%= f.label :email %> <br>
    <%= f.email_field :email %> <br>
    <%= f.label :email_confirmation %> <br>
    <%= f.email_field :email_confirmation %> <br>
    <%= f.label :username %> <br>
    <%= f.text_field :username %> <br>
    <%= f.label :password %> <br>
    <%= f.password_field :password %> <br>
    <%= f.label :password_confirmation %> <br>
    <%= f.password_field :password_confirmation %> <br>
    <%= f.label :first_name %> <br>
    <%= f.text_field :first_name %> <br>
    <%= f.label :last_name %> <br>
    <%= f.text_field :last_name %> <br>
    <%= f.label :bio %> <br>
    <%= f.text_area :bio, size: "70x6" %> <br>
    <%= f.label :weight %> <br>
    <%= f.number_field :weight %> <br>
    <%= f.label :height %> <br>
    <%= f.number_field :height %> <br>
    <%= f.label :goal %> <br>
    <%= f.select :goal, ["Weight Loss", "Weight Gain", "Build Muscle"] %> <br>
    <%= f.submit 'Sign Up' %>
    
<% end %>
<%= button_to "Log in with Google", '/auth/google_oauth2'  %>

</body>

    
    